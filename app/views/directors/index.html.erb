<h1>List of Directors</h1>

<a href="http://localhost:3000/directors/new_form">Add a New Director</a>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
    <th>Photo</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_directors.each do |director| %>
    <tr>
      <td>
        <%= director.name %>
      </td>
      <td>
        <%= director.bio %>
      </td>
      <td>
        <%= director.dob %>
      </td>
      <td>
        <img src="<%= director.image_url %>" width="80">
      </td>
      <td>
        <a href="http://localhost:3000/directors/<%= director.id %>">Show</a>
      </td>
      <td>
        <a href="http://localhost:3000/directors/<%= director.id %>/edit_form">Edit</a>
      </td>
      <td>
        <a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a>
      </td>
    </tr>
  <% end %>
</table>
