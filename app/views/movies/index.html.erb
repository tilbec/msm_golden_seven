<h1>List of Movies</h1>

<a href="http://localhost:3000/movies/new_form">Add a New Director</a>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th>Photo</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.title %>
      </td>
      <td>
        <%= movie.year %>
      </td>
      <td>
        <%= movie.duration %>
      </td>
      <td>
        <%= movie.description%>
      </td>
      <td>
        <img src="<%= movie.image_url %>" width="80">
      </td>
      <td>
        <a href="http://localhost:3000/movies/<%= movie.id %>">Show</a>
      </td>
      <td>
        <a href="http://localhost:3000/movies/<%= movie.id %>/edit_form">Edit</a>
      </td>
      <td>
        <a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete</a>
      </td>
    </tr>
  <% end %>
</table>
